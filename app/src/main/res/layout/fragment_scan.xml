<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/roots_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="200dp"
            android:background="@color/text_color_black"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/scan_layout"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="3"
                android:orientation="vertical"
                android:padding="2dp">

                <TextView
                    android:id="@+id/txt_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/scan_hedding_background"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/text_color_black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:background="@color/scan_id_background_gray"
                        android:padding="2dp"
                        android:text=""
                        android:textAppearance="@android:style/TextAppearance.Large"
                        android:textColor="@color/text_color_white" />

                    <ImageView
                        android:id="@+id/img_scan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:paddingTop="2dp"
                        android:src="@drawable/ic_scan_red" />

                    <TextView
                        android:id="@+id/alert_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_id"
                        android:layout_alignParentLeft="true"
                        android:background="@color/scan_id_background_Purple"
                        android:padding="5dp"
                        android:text="@string/scan_alert"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:visibility="gone" />

                </RelativeLayout>

                <ScrollView
                    android:id="@+id/ScrollView01"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.61">

                    <TextView
                        android:id="@+id/summary_text"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.61"
                        android:padding="5dp"
                        android:text=""
                        android:textAppearance="@android:style/TextAppearance.Medium"></TextView>
                </ScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_issue_citation"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/btn_issue_citation"
                        android:textAllCaps="false" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_write"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:backgroundTint="@color/colorPrimary"
                        android:drawableRight="@drawable/images_rotate_right"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/btn_write"
                        android:textAllCaps="false" />

                    <com.google.android.material.button.MaterialButton

                        android:id="@+id/btn_read"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                       android:backgroundTint="@color/colorPrimary"
                        android:drawableRight="@drawable/images_rotate_right"
                        android:gravity="center"
                        android:padding="0dp"
                        android:text="@string/btn_read"
                        android:textAllCaps="false" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
        android:background="@color/text_color_black"
        android:id="@+id/bottom_sheet_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:behavior_hideable="false"
        app:behavior_peekHeight="200dp"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/history_title_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="2dp">

            <ImageView
                android:id="@+id/history_morph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_action_up" />

            <TextView
                android:id="@+id/txt_history_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/history_morph"
                android:layout_alignBottom="@id/history_morph"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/history_morph"
                android:background="@color/history_title_background"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/action_history"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textColor="@color/text_color_black" />
        </RelativeLayout>

        <ListView
            android:id="@id/android:list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawSelectorOnTop="false" />

        <TextView
            android:id="@id/android:empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/text_color_black"
            android:text="No history" />

    </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>




</androidx.constraintlayout.widget.ConstraintLayout>