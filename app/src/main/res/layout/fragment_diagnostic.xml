<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.FragmentDiagnostic">
    <TextView
        android:visibility="gone"
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/pager_title_background"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/action_diagnostic"
        android:textAllCaps="true"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TableLayout
        android:id="@+id/tableLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:stretchColumns="1" >

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbl_mpv_inspector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_white"
                android:paddingRight="10dp"
                android:text="@string/diagnostic_inspector"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/txt_mpv_inspector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/text_color_white"
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbl_current_login_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_white"
                android:text="@string/diagnostic_login_name"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/txt_current_login_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_white"
                android:text=""
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbl_current_login_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_white"
                android:text="@string/diagnostic_login_id"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/txt_current_login_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_white"
                android:text="000000000000"
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbl_current_login_first_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_white"
                android:text="@string/diagnostic_login_FirstName"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/txt_current_login_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_white"
                android:text="First"
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbl_current_login_last_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_white"
                android:text="@string/diagnostic_login_lastName"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/txt_current_login_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_white"
                android:text="Last"
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbl_current_login_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_white"
                android:text="@string/diagnostic_login_groupName"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/txt_current_login_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Group"
                android:textColor="@color/text_color_white"
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbl_last_communication_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/diagnostic_last_communication_time"
                android:textColor="@color/text_color_white"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/txt_last_communication_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="02.00 pm"
                android:textColor="@color/text_color_white"
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbl_last_uploaded_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_white"
                android:text="@string/diagnostic_last_uploaded_time"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/txt_last_uploaded_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_white"
                android:text="02.00 pm"
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </TableRow>
        <TableRow
            android:id="@+id/table_row_app_software"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/lbl_mpv_app_soft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_white"
                android:paddingRight="10dp"
                android:text="@string/diagnostic_mpv_software"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/txt_mpv_app_software"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_white"
                android:text="2.0"
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </TableRow>


        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/lbl_database_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diagnostic_Database"
                android:textColor="@color/text_color_white"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/txt_database_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.10"
                android:textColor="@color/text_color_white"
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </TableRow>
        <TableRow
            android:id="@+id/tableRow11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:id="@+id/lbl_opr_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/diagnostic_operating_mode"
                android:textColor="@color/text_color_white"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/txt_opr_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limited(network requride)"
                android:textColor="@color/text_color_white"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_weight="1" />
        </TableRow>
